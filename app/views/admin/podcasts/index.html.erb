<p id="notice"><%= notice %></p>

<h1>Podcasts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Query</th>
      <th>Order by</th>
      <th>Max count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @podcasts.each do |podcast| %>
      <tr>
        <td><%= podcast.title %></td>
        <td><%= podcast.query %></td>
        <td><%= podcast.order_by %></td>
        <td><%= podcast.max_count %></td>
        <td><%= link_to 'Show', admin_podcast_path(podcast) %></td>
        <td><%= link_to 'Edit', edit_admin_podcast_path(podcast) %></td>
        <td><%= link_to 'Destroy', admin_podcast_path(podcast), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Podcast', new_admin_podcast_path %>
